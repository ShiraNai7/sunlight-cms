{
    "$schema": "../../../system/schema/extend.json",
    "name": "Codemirror",
    "description": "Syntax highlighter for administration.",
    "authors": [
        {"url": "https://sunlight-cms.cz/"}
    ],
    "version": "1.0",
    "environment": {
        "system": "^8.0"
    },
    "class": "CodemirrorPlugin",
    "events.admin": [
        {"event": "admin.editor", "method": "onAdminEditor"},
        {"event": "admin.head", "method": "onAdminHead", "group": "codemirror"},
        {"event": "admin.style", "method": "onAdminStyle"}
    ]
}