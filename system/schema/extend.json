{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "allOf": [
        {
            "$ref": "plugin.json"
        },
        {
            "properties": {
                "events": {
                    "type": "array",
                    "items": {
                        "$ref": "plugin.json#/definitions/event-subscriber"
                    }
                },
                "events.web": {
                    "type": "array",
                    "items": {
                        "$ref": "plugin.json#/definitions/event-subscriber"
                    }
                },
                "events.admin": {
                    "type": "array",
                    "items": {
                        "$ref": "plugin.json#/definitions/event-subscriber"
                    }
                },
                "scripts": {
                    "$ref": "#/definitions/path-list"
                },
                "scripts.web": {
                    "$ref": "#/definitions/path-list"
                },
                "scripts.admin": {
                    "$ref": "#/definitions/path-list"
                },
                "routes": {
                    "allOf": [
                        {
                            "type": "array",
                            "items": {
                                "$ref": "plugin.json#/definitions/callback-definition"
                            }
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "pattern": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "pattern"
                                ]
                            }
                        }
                    ]
                },
                "langs": {
                    "type": "object",
                    "patternProperties": {
                        "^": {
                            "type": "string"
                        }
                    }
                },
                "hcm": {
                    "type": "object",
                    "patternProperties": {
                        "^": {
                            "$ref": "plugin.json#/definitions/callback-definition"
                        }
                    }
                }
            }
        }
    ],
    "definitions": {
        "path-list": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}